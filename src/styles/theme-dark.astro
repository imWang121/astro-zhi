---
/**
 * 暗色主题样式
 * 当 THEME_MODE 为 'dark' 时应用
 */
---

<style is:global>
	/* 暗色模式变量 */
	:root[data-theme="dark"] {
		--color-white: #0d1117;
		--color-gray-50: #161b22;
		--color-gray-100: #21262d;
		--color-gray-200: #30363d;
		--color-gray-300: #484f58;
		--color-gray-400: #6e7681;
		--color-gray-500: #8b949e;
		--color-gray-600: #b1bac4;
		--color-gray-700: #c9d1d9;
		--color-gray-800: #e6edf3;
		--color-gray-900: #f0f6fc;
		--color-black: #ffffff;
	}

	/* 暗色模式基础样式 */
	:root[data-theme="dark"] body {
		color: var(--color-gray-700);
		background-color: #0d1117;
	}

	:root[data-theme="dark"] a {
		color: var(--color-gray-700);
	}

	:root[data-theme="dark"] a:hover {
		color: var(--color-gray-900);
	}

	/* 暗色模式选中样式 */
	:root[data-theme="dark"] ::selection {
		background-color: #264f78;
		color: #f0f6fc;
	}

	:root[data-theme="dark"] ::-moz-selection {
		background-color: #264f78;
		color: #f0f6fc;
	}

	/* 暗色模式滚动条 */
	:root[data-theme="dark"] ::-webkit-scrollbar-track {
		background: var(--color-gray-100);
	}

	:root[data-theme="dark"] ::-webkit-scrollbar-thumb {
		background: var(--color-gray-400);
	}

	:root[data-theme="dark"] ::-webkit-scrollbar-thumb:hover {
		background: var(--color-gray-500);
	}

	:root[data-theme="dark"] ::-webkit-scrollbar-corner {
		background: var(--color-gray-100);
	}

	:root[data-theme="dark"] * {
		scrollbar-color: var(--color-gray-400) var(--color-gray-100);
	}

	/* ========================================
	   Header
	   ======================================== */
	:root[data-theme="dark"] .header-logo {
		color: #f0f6fc;
	}

	:root[data-theme="dark"] .header-divider {
		color: var(--color-gray-400);
	}

	:root[data-theme="dark"] .header-link {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .header-link:hover {
		color: var(--color-gray-900);
	}

	:root[data-theme="dark"] .nav-divider {
		color: var(--color-gray-400);
	}

	/* ========================================
	   Footer
	   ======================================== */
	:root[data-theme="dark"] .footer-info {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .footer-link {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .footer-link:hover {
		color: var(--color-gray-700);
	}

	:root[data-theme="dark"] .footer-divider {
		color: var(--color-gray-400);
	}

	/* ========================================
	   首页 - 个人介绍
	   ======================================== */
	:root[data-theme="dark"] .intro-label {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .intro-name {
		color: var(--color-gray-900);
	}

	:root[data-theme="dark"] .intro-tagline {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .intro-caption {
		color: var(--color-gray-500);
	}

	/* ========================================
	   首页 - 关于我
	   ======================================== */
	:root[data-theme="dark"] .home-about p {
		color: var(--color-gray-600);
	}

	:root[data-theme="dark"] .home-about a {
		color: var(--color-gray-700);
	}

	:root[data-theme="dark"] .home-about a:hover {
		color: var(--color-gray-900);
	}

	:root[data-theme="dark"] .home-about .note {
		color: var(--color-gray-500);
	}

	/* ========================================
	   首页 - 联系方式
	   ======================================== */
