	   文章详情页 - 头部
	   ======================================== */
	:root[data-theme="dark"] .post-title {
		color: var(--color-gray-900);
	}

	:root[data-theme="dark"] .post-description {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .post-date {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .post-reading-time {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .post-updated {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .post-hero {
		border-color: var(--color-gray-200);
	}

	/* ========================================
	   文章详情页 - 内容基础
	   ======================================== */
	:root[data-theme="dark"] .post-content {
		color: var(--color-gray-700);
	}

	/* ========================================
	   文章详情页 - 标题
	   ======================================== */
