		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .contact-link {
		background: var(--color-gray-100);
	}

	:root[data-theme="dark"] .contact-link:hover {
		background: var(--color-gray-200);
	}

	:root[data-theme="dark"] .contact-icon {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .contact-label {
		color: var(--color-gray-600);
	}

	/* ========================================
	   首页 - 最近文章
	   ======================================== */
	:root[data-theme="dark"] .posts-label {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .posts-more {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .posts-more:hover {
		color: var(--color-gray-900);
	}

	/* ========================================
	   首页 - 项目
	   ======================================== */
	:root[data-theme="dark"] .projects-label {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .project-card {
		background-color: var(--color-gray-100);
	}

	:root[data-theme="dark"] .project-name {
		color: var(--color-gray-900);
	}

	:root[data-theme="dark"] .project-description {
		color: var(--color-gray-500);
	}

	/* ========================================
	   文章列表页
	   ======================================== */
	:root[data-theme="dark"] .blog-title {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .blog-subtitle {
		color: var(--color-gray-900);
	}

	:root[data-theme="dark"] .blog-stats {
		border-bottom-color: var(--color-gray-200);
	}

	:root[data-theme="dark"] .blog-stat-icon {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .blog-stat-value {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .blog-year-title {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .blog-post-item {
		border-bottom-color: var(--color-gray-200);
	}

	:root[data-theme="dark"] .blog-post-title {
		color: var(--color-gray-800);
	}

	:root[data-theme="dark"] .blog-post-title:hover {
		color: var(--color-gray-900);
	}

	:root[data-theme="dark"] .blog-post-description {
		color: var(--color-gray-500);
