	:root[data-theme="dark"] .timeline-line {
		background-color: var(--color-gray-200);
	}

	:root[data-theme="dark"] .timeline-dot {
		background-color: var(--color-gray-400);
	}

	:root[data-theme="dark"] .archive-post-title {
		color: var(--color-gray-800);
	}

	:root[data-theme="dark"] .archive-post-title:hover {
		color: var(--color-gray-900);
	}

	:root[data-theme="dark"] .archive-post-date {
		color: var(--color-gray-500);
	}

	/* ========================================
	   关于页 - 头部
	   ======================================== */
	:root[data-theme="dark"] .hero-label {
		color: var(--color-gray-500);
	}

	:root[data-theme="dark"] .hero-name {
