---
import { SITE_TITLE } from '../consts';

const navLinks = [
	{ href: '/blog', label: 'Blog' },
	{ href: '/about', label: 'About' },
	{ href: '/archive', label: 'Archive' },
];
---

<header>
	<div class="header-inner">
		<div class="header-left">
			<a href="/" class="header-logo">{SITE_TITLE}</a>
			<span class="header-divider">/</span>
			<nav class="header-nav">
				{navLinks.map((link, index) => (
					<>
						{index > 0 && <span class="nav-divider">Â·</span>}
						<a href={link.href} class="header-link">{link.label}</a>
					</>
				))}
			</nav>
		</div>
	</div>
</header>

<style>
	header {
		max-width: 700px;
		margin: 0 auto;
		padding: 4rem 1rem 3rem 1rem;
	}

	.header-inner {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.header-left {
		display: flex;
		align-items: baseline;
		gap: 0.75rem;
	}

	.header-logo {
		font-family: var(--font-serif);
		font-size: 0.9375rem;
		font-weight: 700;
		text-decoration: none;
		color: #c9a227;
		letter-spacing: 0.05em;
	}

	.header-divider {
		font-family: var(--font-serif);
		font-size: 0.875rem;
		color: var(--color-gray-300);
	}

	.header-nav {
		display: flex;
		align-items: baseline;
		gap: 0.5rem;
	}

	.header-link {
		font-family: var(--font-serif);
		font-size: 0.8125rem;
		color: var(--color-gray-400);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.header-link:hover {
		color: var(--color-black);
	}

	.nav-divider {
		font-family: var(--font-serif);
		font-size: 0.75rem;
		color: var(--color-gray-300);
	}

	@media (max-width: 768px) {
		header {
			padding: 4rem 1.5rem 3rem 1.5rem;
			overflow: hidden;
		}

		.header-inner {
			max-width: 100%;
		}

		.header-logo {
			font-size: 0.875rem;
		}

		.header-divider {
			font-size: 0.8125rem;
		}

		.header-link {
			font-size: 0.75rem;
		}
	}
</style>
